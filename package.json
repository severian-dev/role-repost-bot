{
  "name": "role-repost-bot",
  "version": "1.0.0",
  "description": "Discord bot that monitors messages for role mentions and reposts them to designated channels",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "deploy": "tsx src/deploy-commands.ts"
  },
  "keywords": [
    "discord",
    "bot",
    "repost"
  ],
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "discord.js": "^14.25.1",
    "dotenv": "^16.4.5",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
